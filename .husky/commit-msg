#!/usr/bin/env sh
# Commit-msg hook - ValidaÃ§Ã£o de Conventional Commits
# PadrÃ£o: type(scope): description
# Tipos: feat, fix, docs, style, refactor, perf, test, build, ci, chore

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

echo "ğŸ“ Validando mensagem de commit..."

# PadrÃ£o para conventional commits
# Tipos permitidos: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert
PATTERN="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?: .{1,100}"

# Permitir mensagens de merge e revert automÃ¡ticas
if echo "$COMMIT_MSG" | grep -qE "^(Merge|Revert|Initial commit)"; then
  echo "âœ… Commit de merge/revert detectado - permitido"
  exit 0
fi

# Validar padrÃ£o
if ! echo "$COMMIT_MSG" | grep -qE "$PATTERN"; then
  echo ""
  echo "âŒ COMMIT BLOQUEADO: Mensagem nÃ£o segue Conventional Commits"
  echo ""
  echo "ğŸ“– Formato esperado: type(scope): description"
  echo ""
  echo "ğŸ“‹ Tipos permitidos:"
  echo "   feat     - Nova funcionalidade"
  echo "   fix      - CorreÃ§Ã£o de bug"
  echo "   docs     - DocumentaÃ§Ã£o"
  echo "   style    - FormataÃ§Ã£o (nÃ£o muda cÃ³digo)"
  echo "   refactor - RefatoraÃ§Ã£o"
  echo "   perf     - Melhoria de performance"
  echo "   test     - Testes"
  echo "   build    - Build system"
  echo "   ci       - CI/CD"
  echo "   chore    - Tarefas diversas"
  echo ""
  echo "ğŸ“ Exemplos vÃ¡lidos:"
  echo '   feat(home): adicionar card de emoÃ§Ãµes'
  echo '   fix(chat): corrigir scroll infinito'
  echo '   refactor(design): migrar para tokens'
  echo '   docs: atualizar README'
  echo ""
  echo "ğŸ” Sua mensagem: $COMMIT_MSG"
  exit 1
fi

# Validar tamanho da linha (mÃ¡ximo 100 caracteres)
FIRST_LINE=$(echo "$COMMIT_MSG" | head -1)
if [ ${#FIRST_LINE} -gt 100 ]; then
  echo ""
  echo "âŒ COMMIT BLOQUEADO: Primeira linha muito longa (>${#FIRST_LINE} > 100)"
  echo "ğŸ’¡ Mantenha a primeira linha com no mÃ¡ximo 100 caracteres"
  exit 1
fi

echo "âœ… Mensagem de commit vÃ¡lida!"
exit 0

