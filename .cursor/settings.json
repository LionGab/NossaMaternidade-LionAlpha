{
  "// Configurações otimizadas para Claude no Cursor - Nossa Maternidade": "Atualizado em 29/11/2025",

  "cursor.ai.model": "claude-sonnet-4.5",
  "cursor.ai.maxTokens": 8192,
  "cursor.ai.temperature": 0.4,
  "cursor.ai.enableCodebaseIndexing": true,
  "cursor.ai.enableAutocomplete": true,
  "cursor.ai.contextWindow": "large",
  "cursor.ai.preferClaude": true,
  "cursor.ai.fallbackModel": "claude-opus-4",

  "// Configurações de arquivos": "",
  "files.exclude": {
    "**/node_modules": true,
    "**/.expo": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.DS_Store": true
  },

  "// Configurações de busca": "",
  "search.exclude": {
    "**/node_modules": true,
    "**/.expo": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true
  },

  "// Configurações de TypeScript": "",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "// Configurações de editor": "",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "// Configurações específicas do projeto": "",
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript"
  },

  "// Performance": "",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.expo/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },

  "// Configurações de modo autônomo - YOLO MODE": "",
  "cursor.ai.autonomousMode": {
    "enabled": true,
    "maxDuration": 7200,
    "autoSave": true,
    "checkpointInterval": 300,
    "maxIterations": 100,
    "errorRetryLimit": 5,
    "progressTracking": true,
    "yoloMode": true,
    "autoAcceptChanges": true,
    "skipConfirmations": true
  },

  "// Configurações de contexto para modo autônomo": "",
  "cursor.ai.autonomousContext": {
    "includeTests": true,
    "includeDocumentation": true,
    "includeGitHistory": false,
    "maxFiles": 50,
    "priorityFiles": [
      "src/theme/tokens.ts",
      "CLAUDE.md",
      "CONTEXTO.md",
      ".cursor/rules"
    ]
  },

  "// Configurações de exibição de tokens e métricas": "",
  "cursor.ai.showTokenUsage": true,
  "cursor.ai.showTokenCount": true,
  "cursor.ai.displayMetrics": true,
  "cursor.ai.showUsageStats": true,
  "cursor.ai.enableTokenTracking": true,
  "cursor.ai.showCostEstimate": true,
  
  "// Configurações de UI para métricas": "",
  "cursor.chat.showTokenCount": true,
  "cursor.chat.showUsageMetrics": true,
  "cursor.chat.displayTokenInfo": true,
  "cursor.chat.showCostTracking": true
}
